rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User data - only authenticated users can access their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User profile collection
    match /users/{userId}/user_profile/{profileId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Ensure profile ID matches user ID
      allow create: if request.auth != null 
                    && request.auth.uid == userId 
                    && request.resource.data.id == userId;
    }
    
    // Agent profiles collection
    match /users/{userId}/agent_profiles/{agentId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Ensure timestamps are set
      allow create, update: if request.auth != null 
                            && request.auth.uid == userId
                            && request.resource.data.updatedAt is timestamp;
    }
    
    // Chat sessions collection
    match /users/{userId}/chat_sessions/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Ensure timestamps are set and messages is an array
      allow create, update: if request.auth != null 
                            && request.auth.uid == userId
                            && request.resource.data.updatedAt is timestamp
                            && request.resource.data.messages is list;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
